#include <stdio.h>

int main() {
    int matriz[4][4];
    
    // Llenar con ceros
    for(int i = 0; i < 4; i++) {
        for(int j = 0; j < 4; j++) {
            matriz[i][j] = 0; // cada posición vale 0
            printf("%d ", matriz[i][j]); // imprimir valor
        }
        printf("\n"); // salto de línea al terminar cada fila
    }

return 0;
}
